<div class="row mt-5 mb-5">
  <div class="col-lg-4 col-md-6 ml-auto mr-auto">
    <h1 class="text-center">Sign Up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :username, "Nombre de usuario", class: "label" %>
        <%= f.text_field :username, autofocus: true, class: 'form-control', placeholder: "Nombre de usuario" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Correo electrónico", class: "label" %>
        <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: "Correo electrónico" %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Contraseña", class: "label" %>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Contraseña' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirma tu contraseña", class: "label" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirma tu contraseña' %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
